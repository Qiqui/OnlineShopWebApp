@model List<OrderViewModel>

<h1 class="text-center">Список заказов</h1>
@if (Model != null && Model.Count > 0)
{
    <div class="row-cols-7">
        <table class="table table-dark table-striped">
            <tr>
                <th>Nᵒ</th>
                <th>Статус</th>
                <th>Пользователь</th>
                <th>Дата</th>
                <th>Время</th>
                <th>Сумма</th>
                <th></th>
            </tr>
            @{
                int i = 1;
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                                @i
                        </td>
                        <td>
                                @EnumExtensions.GetDisplayName(order.Status)
                        </td>
                        <td>
                            @order.ContactInfo.Email
                        </td>
                        <td>
                                @order.CreateDate.Date.ToString("dd/MM/yy")
                        </td>
                        <td>
                                @order.CreateDate.ToString("HH:mm")
                        </td>
                        <td>
                                @order.TotalPrice
                        </td>
                    </tr>
                    i++;
                }
            }
        </table>
    </div>
}
else
{
    <p>Вы не сделали ни одного заказа</p>
}