@model RoleAddRViewModel

<div class="container">
    @await Html.PartialAsync("_AdminLayout")
    <form method="post">
        <div>
            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

            <div class="row">
                <label asp-for="Name">Название роли</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="row-cols-6">
                <button type="submit" class="btn btn-outline-success" asp-area="Administration" asp-controller="Role" asp-action="Add"> Добавить роль </button>
            </div>
        </div>
    </form>
</div>