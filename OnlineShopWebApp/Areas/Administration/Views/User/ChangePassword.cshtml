@model ChangePasswordViewModel

<h1>Смена пароля для пользователя @Model?.Email</h1>
<form method="post">
    <input type="hidden" asp-for="Email" value="@Model.Email" />
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <div class="row">
        <label asp-for="OldPassword">Старый пароль</label>
        <input asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div class="row">
        <label asp-for="Password">Новый пароль</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="row">
        <label asp-for="PasswordConfirm">Повтор пароля</label>
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="row-cols-auto">
        <button type="submit" class="btn btn-outline-success" asp-area="Administration" asp-controller="User" asp-action="ChangePassword" asp-route-id="@Model?.Id"> Подтвердить редактирование </button>
    </div>
</form>