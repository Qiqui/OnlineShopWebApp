@model UserViewModel

<h1>Пользователь: @Model.Email</h1>

<p>Имя: @Model.Name</p>
<p>Фамилия: @Model.Surname</p>
<p>Почта: @Model.Email</p>
<p>Телефон: @Model.Phone</p>
<ul>
    <li>
        <a asp-area="Administration" asp-controller="User" asp-action="ChangePassword" asp-route-id="@Model.Id">Изменить пароль</a>
    </li>
    <li>
        <a asp-area="Administration" asp-controller="User" asp-action="Update" asp-route-id="@Model.Id">Редактирование данных</a>
    </li>
    <li>
        <a asp-area="Administration" asp-controller="User" asp-action="ChangeRole" asp-route-userId="@Model.Id">Изменить роль</a>
    </li>
    <li>
        <a asp-area="Administration" asp-controller="User" asp-action="Remove" asp-route-id="@Model.Id">Удалить пользователя</a>
    </li>
</ul>